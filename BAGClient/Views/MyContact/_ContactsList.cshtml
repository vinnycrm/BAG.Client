@model BAG.CustomObject.GoogleContacts[]

<div class="panel panel-default panelborder">
    <div class="panel-heading" id="btnresponsive" style="background-color: #da4d4d;padding-bottom:30px;">
            <h3 class="panel-title redtext">
                <span class="pull-left"><i class="fa fa-users"></i>&nbsp;My Group</span><a href="#" data-toggle="modal" data-target="#Announcement">
                </a>
                <button class="btn btn-default pull-right btn-xs buttoncolor" onclick="javascript:P_AddContact()">
                    <span class="fa fa-plus-square"></span>&nbsp;Add</button>
            </h3>
    </div>

    <div class="panel-body">
        @if (Model.Count() > 0)
        {
            <div class="table-responsive table-fixed col-md-12 " style="position:relative;margin-top:20px;">
                <table class="table table-bordered table-hover table-fixed">

                    <thead class="center">
                        <tr>
                            <th class="headeralign">Name</th>
                            <th class="headeralign">Email Id</th>
                            <th class="headeralign">Mobile Number</th>
                            <th class="headeralign">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">@item.Name</td>
                                <td align="center">@item.EmailID</td>
                                <td align="center">@item.ContactNo</td>
                                <td align="center"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" onclick="Javascript:P_DeleteGroupContact('@item.GroupId','@item.UserId')"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div><!--end of .table-responsive-->
        }
        else
        {
            <div class="msg msg-success msg-success-text col-md-12 text-center">
                <form class="form-inline">
                    <div class="form-group">
                        <span>
                            You dont have contacts in this Group why dont you Add Some...
                        </span>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

