@model BAG.Models.GroupDetails

<div class="modal fade" id="editgroup" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" style="dispay:block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="modalresize">
                <div class="panel-group" style="margin-bottom: 0.1cm;">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="background-color: #DA4D4D; ">
                            <i class="fa fa-times fa-2x pull-right removeicon2" aria-hidden="true" data-dismiss="modal"></i>
                            <h3 class="panel-title redtext">
                                <span class="pull-left"><i class="fa fa-pencil"></i>&nbsp;Edit Group</span><a href="#" data-toggle="modal" data-target="#Announcement">
                                    <br />
                                </a>
                            </h3>
                        </div>
                        <div class="panel-body col-md-12">
                            <div class="form-horizontal">
                                @using (Ajax.BeginForm("EditGroups", "MyContact", null, new AjaxOptions
                                    {
                                        HttpMethod = "POST",
                                        UpdateTargetId = "resultTarget",
                                        OnSuccess = "UpdateGroups()"
                                    }, new { id = "resultTarget" }))
                                {
                                            <!-- Sign In Form -->
                                            <!-- Text input-->
                                    <div class="control-group">
                                        <div class="controls col-md-offset-1">
                                            @Html.TextBoxFor(model => model.Group_Name, new { @class = "form-control input-medium", @onkeypress = "return EnableKeys(1,event);", @maxlength = "100", @placeholder = "Wishlist Name" })
                                        </div>
                                        <div>
                                            @Html.HiddenFor(model => model.Group_Id, new { Value = @Model.Group_Id })
                                        </div>
                                    </div>
                                            <!-- Button -->
                                    <div class="control-group col-md-offset-2">
                                        <label class="control-label" for="signin"></label>
                                        <div class="controls col-md-offset-2">
                                            <button type="submit" class="btn btn-success btn-sm">Update</button>&nbsp; &nbsp; &nbsp;
                                            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">  Cancel</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

