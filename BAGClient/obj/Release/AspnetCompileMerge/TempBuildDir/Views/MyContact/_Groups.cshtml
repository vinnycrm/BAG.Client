@model BAG.Models.GroupDetails[]


<div class="list-group">
    @if(Model.Count()>0)
    {
    foreach(var items in Model)
    { 
    <div class="list-group-item">
        <a style="text-decoration:none;text-decoration:none;" href="javascript:GetGroupDetails('@items.Group_Id')">
            <i class="fa fa-tasks fa-fw "></i> @items.Group_Name
        </a>
        <a href="javascript:P_EditGroup('@items.Group_Id','@items.Group_Name')" class="pull-right" id="eliminateline">
            <i data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-default btn-xs"><span class=" fa fa-plus"></span></button></i>
        </a>
        <a href="javascript:P_DeleteGroup('@items.Group_Id')" class="pull-right" id="eliminateline">
            <i data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></button></i>
        </a>
    </div>
    }
    }
    else
    {
        <div class="list-group">
            <a style="text-decoration:none;" href="javascript:P_CreateGroup()" class="list-group-item ">
                <i class="fa fa-users fa-lg pull-left"></i>&nbsp;Create Group
            </a>
        </div>
    }

</div>