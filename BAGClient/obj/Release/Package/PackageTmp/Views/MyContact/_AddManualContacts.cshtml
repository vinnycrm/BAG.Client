@model BAG.Models.EditContact

<div class="modal fade" id="addcontact" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" style="dispay:block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="padding-top:0.1cm;padding-left:0.1cm;padding-right:0.1cm;">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading" style="background-color: #DA4D4D; ">
                            <a class="pull-right removeicon2" style="text-decoration:none;color:white;" href="#" data-dismiss="modal">X</a>
                            <h3 class="panel-title redtext">
                                <span class="pull-left"><i class="fa fa-plus-circle"></i>&nbsp;Add Contact</span><a href="#" data-toggle="modal" data-target="#Announcement">
                                    <br />
                                </a>
                            </h3>
                        </div>
                        <div class="panel-body col-md-12">
@using (Ajax.BeginForm("AddContactManually", "MyContact", null, new AjaxOptions
                                    {
                                        HttpMethod = "POST",
                                        UpdateTargetId = "resultTarget",
                                        OnSuccess = "GetAllContacts()"
                                    }, new { id = "resultTarget" }))
                                {
                            <div id="custom-search-inputb ">
                                <div class="input-group  col-md-offset-2 col-md-8">
                                   @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-medium", @onkeypress = "return EnableKeys(1,event);", @maxlength = "50", @placeholder = "Name" })
                                </div>
                            </div>
                            <br>
                            <div id="custom-search-inputb ">
                                <div class="input-group  col-md-offset-2 col-md-8">
                                    @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control input-medium", @onkeypress = "return EnableKeys(4,event);", @maxlength = "50", @placeholder = "Email Id" })
                                </div>
                            </div>
                            <br>
                            <div id="custom-search-inputb ">
                                <div class="input-group  col-md-offset-2 col-md-8">
                                    @Html.TextBoxFor(model => model.Phone_No, new { @class = "form-control input-medium", @onkeypress = "return EnableKeys(2,event);", @maxlength = "15", @placeholder = "Contact No." })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="controls col-md-offset-4" style="position:relative;top:15px;">
                                    <button type="submit" class="btn btn-success btn-sm">Create</button>&nbsp; &nbsp; &nbsp;
                                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">  Cancel</button>

                                </div>
                            </div>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
