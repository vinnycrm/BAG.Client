@model BAG.Models.GoogleContacts[]

<div class="panel panel-default panelborder">
    <div class="panel-heading" id="btnresponsive" style="background-color: #da4d4d;">

                    <span class="pull-left panel-title redtext"><i class="fa fa-users"></i>&nbsp;My Contacts</span><a href="#" data-toggle="modal" data-target="#Announcement"></a>
        <div class="form-inline text-right">
            <div class="form-group row">
                <a href='@Url.Action("Import", "MyContact")' class="btn btn-default btn-xs buttoncolor"><span class="fa fa-google-plus"></span>&nbsp;Import</a>
                <a class="btn btn-default btn-xs buttoncolor" href="javascript:P_AddManualContacts()"><span class="fa fa-plus-square"></span>&nbsp;Add</a>
                </div>
        </div>
    </div>

    <div class="panel-body">
        @if (Model.Count() > 0)
        {
            <div class="table-responsive table-fixed col-md-12 " style="position:relative;margin-top:20px;">
                <table class="table table-bordered table-hover table-fixed">

                    <thead class="center">
                        <tr>
                            <th class="headeralign">Name</th>
                            <th class="headeralign">Email Id</th>
                            <th class="headeralign">Mobile Number</th>
                            <th class="headeralign" colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">@item.Name</td>
                                <td align="center">@item.EmailID</td>
                                <td align="center">@item.ContactNo</td>
                                <td align="center"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-default  btn-xs" onclick="Javascript:P_EditContact('@item.UserId')" data-title=" delete" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                <td align="center"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" onclick="Javascript:P_DeleteContact('@item.UserId')"><span class="glyphicon glyphicon-trash"></span></button></p></td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div><!--end of .table-responsive-->
        }
        else
        {
            <div class="msg msg-success msg-success-text col-md-12 text-center">
                <form class="form-inline">
                    <div class="form-group">
                        <span>
                            You dont have contacts why dont you import...
                        </span>
                    </div>
                </form>
                <span>
                    <a href='@Url.Action("Import", "MyContact")' style="margin-top: 10px;" class="btn btn-template-main  btn-md " data-backdrop="static"><span class="fa fa-download"></span>&nbsp;Import</a>
                </span>
            </div>
        }
    </div>
</div>


